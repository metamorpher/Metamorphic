---
    name: "tfs-checkin"
    description: "Executes a powershell script when a TFS checkin occurs."
    enabled: true

    signal:
        id: "CheckIn"
        parameters:
            changeset: "changeset_number"
            comment: "check_comment"
            user: "username"

    action:
        id: "powershell"
        parameters:
            scriptfile: "write-committext.ps1"
            arguments: "-changeSet {{signal.changeset}} -comment '{{signal.comment}}' -user '{{signal.user}}'"